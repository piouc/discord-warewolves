{
	"compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2019", "ES2015.Iterable"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "./dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}